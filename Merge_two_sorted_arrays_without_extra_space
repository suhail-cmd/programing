def merge(arr1,arr2):
    n,m = len(arr1),len(arr2)
    arr3 = [0] * (n + m)
    left,right,index= 0,0,0 
    while left < n and right < m:
        if arr1[left] <= arr2[right]:
            arr3[index] = arr1[left]
            index += 1 
            left += 1 
        else:
            arr3[index] = arr2[right]
            index += 1 
            right += 1 
            
    while left < n :
        arr3[index] = arr1[left]
        index += 1 
        left += 1 
    while right < m:
        arr3[index] = arr2[right]
        index += 1 
        right += 1
    for i in range(len(arr3)):
        if i < n:`
    return arr1,arr2
arr1 = [1, 4, 7, 8, 10]
arr2 = [2, 3, 9]
print(merge(arr1, arr2))
